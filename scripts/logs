#!/usr/bin/env bash
# View logs from all or specific containers

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

cd "$PROJECT_ROOT"

if [ -z "$1" ]; then
    echo "ðŸ“‹ Showing logs for all containers (press Ctrl+C to exit)..."
    echo ""
    docker-compose logs -f
else
    echo "ðŸ“‹ Showing logs for $1 (press Ctrl+C to exit)..."
    echo ""
    docker-compose logs -f "$1"
fi

